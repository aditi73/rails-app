<h1> Articles tagged with <%= @tag.name %></h1>
<ul>	
	<% @tag.articles.each do |article| %>
		<li> 
			<%= link_to article.title, article_path(article) %>
		</li>
	<% end %>
</ul>
<br/>
<% if logged_in? %>
<%= link_to "Delete", tag_path(@tag), method: :delete, data: {confirm: "Sure want to delete the tag"} %>		
<% end %>